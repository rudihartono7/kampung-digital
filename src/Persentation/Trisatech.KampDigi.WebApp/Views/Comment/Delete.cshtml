@model Trisatech.KampDigi.Application.Models.CommentModel
@{
    ViewData["Title"] = "Delete Thread";
    int i = 0;
    Layout = "_BaseTemplate";
}
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Delete Comment</h4>
            <div class="form-group row">
                <div class="col-sm-12 mb-5 mt-2">
                    @Html.DisplayFor(model => model.Desc)
                </div>
                </div>
                <form asp-action="Delete">
                    <input type="text" asp-for="Id" hidden/>
                    <input type="submit" value="Delete" class="btn btn-danger me-2" /> |
                </form>
            </div>
        </div>
    </div>
</div>