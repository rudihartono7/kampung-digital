@model Trisatech.KampDigi.Application.Models.CommentModel
@{
    ViewData["Title"] = "Create Comment";
    int i = 0;
    Layout = "_BaseTemplate";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Comment</h4>
            <form class="forms-sample" asp-action="Create" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Desc" for="exampleInput3"></label>
                    <input class="form-control" id="exampleInput3" placeholder="Harga Produk" asp-for="Desc">
                    <span asp-validation-for="Desc" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
            </form>
            <a asp-action="Index" class="btn btn-light">Cancel</a>
        </div>
    </div>
</div>